    <LinearLayout
        android:id="@+id/offersLayout1"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/layoutstyle"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="openOfferPage"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/offerImg1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center_vertical"
            android:src="@drawable/offer_thumb" />
        
          <TextView  
            android:id="@+id/offerText1"
            android:layout_width="0dip" 
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_weight="1"             
        	android:layout_marginLeft="5dp"
        	android:layout_marginRight="5dp"
        	android:layout_marginTop="5dp"
        	android:textSize="18dp"
            android:text="@string/offerdescription"
            />        

    </LinearLayout>
    
    <View
