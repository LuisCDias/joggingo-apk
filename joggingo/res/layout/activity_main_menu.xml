<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layoutstyle"
    android:clickable="true"
    android:onClick="getLoggedUser" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/userNamelayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userNameOnMainMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mysixlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNamelayout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layoutstyle"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_cover"
                android:layout_width="140dp"
                android:layout_height="156dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/mysixlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layoutstyle"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/joggingo_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:text="Start running!"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/button_begin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Begin" />

                <Button
                    android:id="@+id/button_stop"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/gradient0"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/mysixlayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient" >
        </View>

        <TextView
            android:id="@+id/coordinates_text"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/gradient0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:text="COORDINATES PLACEHOLDER"
            android:textSize="18sp" />
        
        <View
            android:id="@+id/gradient_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/coordinates_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/gradient" >
        </View>
        
        <Button
            android:id="@+id/button_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coordinates_text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="goToMap"
            android:visibility="gone"
            android:text="Go to map" />
        
    </RelativeLayout>

</ScrollView>