<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/layoutstyle"
    android:clickable="true"
    android:onClick="getLoggedUser" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/userNamelayout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userNameOnMainMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mysixlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNamelayout"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layoutstyle"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_cover"
                android:layout_width="140dp"
                android:layout_height="156dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:id="@+id/mysixlayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/layoutstyle"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/joggingo_main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center|center_vertical"
                    android:text="Start running!"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/start_stop_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/layoutstyle"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <Button
                        android:id="@+id/button_begin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Start track" />

                    <Button
                        android:id="@+id/button_pause"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Pause"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/button_stop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Stop"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/gradient0"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/mysixlayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient" >
        </View>

        <EditText
            android:id="@+id/track_name"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_below="@+id/gradient0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:gravity="top"
            android:hint="Enter track name..."
            android:inputType="text"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_start_tracking"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/track_name"
            android:text="Begin!"
            android:visibility="gone" />

        <!-- Colocar em layout horizontal juntamente com outra textview para os km -->

        <LinearLayout
            android:id="@+id/statistics_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_start_tracking"
            android:layout_gravity="center_vertical"
            android:background="@drawable/layoutstyle"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1" >

            <TextView
                android:id="@+id/elapsed_time_text"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="00:00:00"
                android:textSize="28dp" />

            <TextView
                android:id="@+id/distance_ran_text"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.4"
                android:gravity="left"
                android:text="0.0 km"
                android:textSize="20dp" />
            <!--  -->

        </LinearLayout>

        <View
            android:id="@+id/gradient_statistics"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/statistics_layout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient"
            android:visibility="gone" />

        <TextView
            android:id="@+id/coordinates_text"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/gradient_statistics"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Getting coordinates..."
            android:textSize="18sp"
            android:visibility="gone" />

        <View
            android:id="@+id/gradient_coordinates"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@id/coordinates_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/gradient"
            android:visibility="gone" >
        </View>

        <Button
            android:id="@+id/button_map"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coordinates_text"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="goToMap"
            android:text="Go to map"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_sincronize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_map"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:onClick="goToMap"
            android:text="Syncronize account"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>